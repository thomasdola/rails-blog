<%= form_for @article do |f| %>

    <p>
        <% if @article.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@article.errors.count, "error") %></h2>
                prohibited this article from being saved
                <ul>
                    <% @article.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </p>

    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>

    <p>
        <%= f.submit %>
    </p>
<% end %>
